<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Products</title>
    <link rel="stylesheet" href="/css/main.css">
    <script src="/js/jquery.js"></script>
    <script src="/js/jquery-ui.js"></script>
    <script src="/js/main.js"></script>
</head>
<body>
    <div id="tabs">
      <ul>
        <li><a href="#tabs-1">New</a></li>
        <li><a href="#tabs-2">Edit</a></li>
        <li><a href="#tabs-3">Delete</a></li>
      </ul>
      <div id="tabs-1">
        <form method="post" enctype="multipart/form-data" name="new_product" action="">
        <fieldset>
            <legend>Product information:</legend>
            <h5>All fields are required</h5>
            <div>
                <label class="field" for="sku">SKU:</label>
                <input type="text" name="sku" />
            </div>

            <div>
                <label class="field" for="category">Category:</label>
                <select name="category">
                    <!-- TMPL_LOOP NAME=CATEGORIES -->
                        <option value="<!-- TMPL_VAR NAME=CATEGORYID -->"><!-- TMPL_VAR NAME=NAME --></option>
                    <!-- /TMPL_LOOP -->
                </select>
            </div>

            <div>
                <label class="field" for="vendor">Vendor:</label>
                <select name="vendor">
                    <!-- TMPL_LOOP NAME=VENDORS -->
                        <option value="<!-- TMPL_VAR NAME=VENDORID -->"><!-- TMPL_VAR NAME=NAME --></option>
                    <!-- /TMPL_LOOP -->
                </select>
            </div>

            <div>
                <label class="field" for="platform">Platform:</label>
                <select name="platform">
                    <!-- TMPL_LOOP NAME=PLATFORMS -->
                        <option value="<!-- TMPL_VAR NAME=PLATFORMID -->"><!-- TMPL_VAR NAME=NAME --></option>
                    <!-- /TMPL_LOOP -->
                </select>
            </div>

            <div>
                <label class="field" for="vendorModel">Manufacturer's Identifier:</label>
                <input type="text" name="vendorModel" />
            </div>

            <div>
                <label class="field" for="description">Description:</label>
                <textarea rows="4" cols="50" name="description"></textarea>
            </div>

            <div>
                <label class="field" for="features">Product Features:</label>
                <textarea rows="4" cols="50" name="features"></textarea>
            </div>

            <div>
                <label class="field" for="cost">Cost:</label>
                <input type="text" name="cost" />
            </div>

            <div>
                <label class="field" for="retail">Retail:</label>
                <input type="text" name="retail" />
            </div>

            <div>
                <label class="field" for="image">Image:</label>
                <input type="file" name="image" id="image" />
            </div>

            <input type="reset" value="Clear" />
            <input type="button" value="Add Product" id="submit_button" />
        </fieldset>
        </form>
      </div>

      <div id="tabs-2">
        Edit
      </div>

      <div id="tabs-3">
        Delete
      </div>
    </div>

    <!-- <a href='/cgi-bin/logout.cgi'>Logout Now</a> -->

</body>
</html>
